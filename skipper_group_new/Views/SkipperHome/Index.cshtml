@model skipper_group_new.Models.clsHomeModel
@using System.Data
@using skipper_group_new.mainclass
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    DataTable dtnews = ViewBag.Newslist as DataTable;
}

<!---------header html start here--------->
<header class="position-fixed d-flex align-items-center justify-content-between w-full">
    <div class="logo">
        <a href="/">
            <img width="250" height="78" src="~/images/logo/logo.png" class="img-fluid before-sticky"
                 alt="SKIPPER LIMITED">
            <img width="250" height="78" src="~/images/logo/logo-sticky.png" class="img-fluid after-sticky"
                 alt="SKIPPER LIMITED">
        </a>
    </div>
    @await Html.PartialAsync("~/Views/PartialView/_MainMenu.cshtml")
</header>


<section class=home_banner>
    <div class=video>
        <div class=video-wrapper>
            <div class=video-container>
                <div id=homebanner1_rptbanner_ctl00_panel2>
                    <video autoplay height=700 id=video loop muted
                           width=100%>
                        <source src=video/banner_video.mp4 type=video/mp4>
                    </video><span class="mute-toggle muted"></span>
                </div>
            </div>
        </div>
    </div>
</section>
@Html.Raw(Model.SmallDescription)
<div class=wrapper>
    <div class=eng-wrapper>
        <section class="animated-section home_eng">
            @Html.Raw(Model.cmscontent)
        </section>
        @Html.Raw(Model.pagedesc2)
    </div>
    @Html.Raw(Model.pagedesc3)
    @Html.Raw(Model.megamenu)
    @if (ViewBag.ProjectsList != null)
    {

        <section class=featured_project>
            <div class=scroll-spacer></div>
            <div class=trigger-placeholder></div>
            <div class=icon_project>
                <figure><img src=/images/icon/Subtraction-4.svg alt="skipper image" class=img-fluid></figure>
            </div>
            <div class=container>
                <h2>Featured Projects</h2>
                <div class=project_slider>
                    <div class="mySwiper swiper">
                        <div class=swiper-wrapper>
                            <div class=swiper-slide>
                                <div class=swiper-container>
                                    <div class=slider_grid>
                                        @{
                                            var dt = ViewBag.ProjectsList as DataTable;
                                        }
                                        @if (dt != null && dt.Rows.Count > 0)
                                        {
                                            @for (int i = 1; i <= dt.Rows.Count - 2; i++)
                                            {
                                                DataRow data = dt.Rows[i];
                                                <div class=left-slide id=rptinnerleft_ctl00_panelleft>
                                                    <div class=corner-accent>
                                                        <figure>
                                                            <img src=/uploads/SmallImages/@data["uploadevents"]
                                                                 alt="skipper image" class=img-fluid>
                                                        </figure>
                                                    </div>
                                                    <div class=text-content>
                                                        <div class=bottom_left_icon>
                                                            <img src=/images/icon/Subtraction-6.svg
                                                                 alt="skipper image" class=img-fluid>
                                                        </div>
                                                        <div class=project-title>
                                                            @data["researchtitle"]
                                                        </div>
                                                        <div class=description>Transgrid</div>
                                                    </div>
                                                    <div class=voltage></div><a href="/project-details/@Convert.ToString(@data["researchtitle"]).ToLower().ToSlug()/@data["researchid"]"
                                                                                class=streched_link></a>
                                                </div>
                                            }

                                        }

                                        <div class=right-container id=panelright>


                                            @if (dt != null && dt.Rows.Count > 1)
                                            {
                                                @for (int i = 1; i <= dt.Rows.Count - 1; i++)
                                                {
                                                    DataRow data = dt.Rows[i];
                                                    <div class=right-top>
                                                        <div class=corner-accent>
                                                            <figure>
                                                                <img src=/uploads/SmallImages/@data["uploadevents"]
                                                                     alt="skipper image" class=img-fluid>
                                                            </figure>
                                                        </div>
                                                        <div class=text-content>
                                                            <div class=bottom_left_icon>
                                                                <img src=images/icon/Subtraction-6.svg class=img-fluid>
                                                            </div>
                                                            <div class=project-title>
                                                                @data["researchtitle"]
                                                            </div>
                                                            <div class=description>
                                                                @data["tagline"]
                                                                <div class=loctn_grid>
                                                                    <div class=prjt_nme>
                                                                        <h4>Project Authority</h4>
                                                                        <p>Ceylon Electricity Board (CEB)
                                                                    </div>
                                                                    <div class=prjt_nme>
                                                                        <h4>Location</h4>
                                                                        <p>@data["location"]</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class=voltage></div>
                                                        <a href="/project-details/@Convert.ToString(@data["researchtitle"]).ToLower().ToSlug()/@data["researchid"]"
                                                           class=streched_link></a>
                                                    </div>
                                                }

                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="button_group d-none">
                            <div class=container>
                                <div class=swiper-button-next></div>
                                <div class=swiper-button-prev></div>
                            </div>
                        </div>
                        <div class=container>
                            <div class=view_all>
                                <a href="/projects">
                                    View All Projects
                                    <figure><img src=/images/icon/right_icon.svg alt="project icon"></figure>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }

    @if (dtnews.Rows.Count > 0)
    {
        <section class=skipper_news>
            <div class=full_container>
                <div class=item>
                    <figure><img src=/images/skipper_news.png alt="skipper news" class=img-fluid></figure>
                </div>
                @if (dtnews.Rows.Count > 0)
                {
                    foreach (DataRow row in dtnews.Rows)
                    {
                        <div class=item>
                            <div class=home_news>
                                <figure>
                                    <img src=/uploads/smallimages/@Convert.ToString(row["uploadevents"]) alt="@Convert.ToString(row["eventstitle"])" class=img-fluid>
                                </figure>
                                <div class="fade-container home_news_detail">
                                    <div class=h_date>@Convert.ToDateTime(row["eventsdate"]).ToString("dd-MMM-yyyy")</div>
                                    <h3>@Convert.ToString(row["eventstitle"])</h3>
                                </div><a href=/news-details/@Convert.ToString(row["eventstitle"]).ToSlug()/@Convert.ToInt32(row["eventsid"]) class=streched_link></a>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class=view_all>
                <a href="/whats-new">
                    View All News & Updates
                    <figure>
                        <img src=/images/icon/right_icon.svg alt="nes icon">
                    </figure>
                </a>
            </div>
        </section>
    }

</div>


