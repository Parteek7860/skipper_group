@using System.Data
@{
    Layout = "~/Views/Shared/_homepage.cshtml";
    ViewBag.Title = "View Investor";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Investor </a></li>
                <li class="breadcrumb-item active">View Investor</li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                @{
                    var cat = ViewBag.Bindinvestor as DataTable;
                }
                @if (cat != null && cat.Rows.Count > 0)
                {
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    <input type="text" id="searchInput" class="form-control" placeholder="Search..." onkeyup="searchTable()" />
                    <div class="row" style="margin-top:20px;">
                        <div class="col-lg-4">
                            <label for="fromDate" style="font-weight: bold;">From Date</label>
                            <input type="date" id="fromDate" class="form-control" style="border-radius: 5px; border: 1px solid #ddd;" />
                        </div>
                        <div class="col-lg-4">
                            <label for="toDate" style="font-weight: bold;">To Date</label>
                            <input type="date" id="toDate" class="form-control" style="border-radius: 5px; border: 1px solid #ddd;" />
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-lg-2" style="padding-top:10px;">
                            <button class="btn btn-primary" type="button" onclick="filterByDate()" style="width: 50%; padding: 10px; border-radius: 5px; font-weight: bold;background-color:#456976 !important">Search</button>
                        </div>
                        <div class="col-md-2 align-self-end" style="text-align: center;">
                            <form method="post" asp-controller="Products" asp-action="ExportCategoryToExcel">
                                <button type="submit" class="btn btn-success" style="width: 50%; padding: 10px; border-radius: 5px; font-weight: bold;background-color:#456976 !important">Export to Excel</button>
                            </form>
                        </div>
                    </div>
                    <table class="table table-bordered" id="categoryTable">
                        <thead class="table-header">
                            <tr>
                                <th>Category</th>
                                <th>Sub Category</th>
                                <th>Year Category</th>
                                <th>Quarterly</th>
                                <th>Investor Name</th>
                                <th>Download</th>
                                <th>Display Order</th>
                                <th>Status</th>
                                  <th>Show New</th>
                                <th>Expiry Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow c in cat.Rows)
                            {
                                <tr>
                                    <td>@c["category"]</td>
                                    <td>@c["subcategory"]</td>
                                    <td>@c["yearcategory"]</td>
                                    <td>@c["yqid"]</td>
                                    <td>@c["productname"]</td>
                                    <td>
                                    <a href="/investor/downloadfile/@c["prospectus"]">
                                        <img src="~/backoffice/images/Download_24x24.png" alt="Download" />
                                        </a>
                                    </td>
                                    <td>@c["displayorder"]</td>
                                    <td>
                                        @if (Convert.ToBoolean(c["status"]) == true)
                                        {
                                            <form method="get" action="/Backoffice/investor/investorstatus/@c["productid"]" style="display: inline;">
                                                <button type="submit" class="btnstatus" style="border:none;background:none" onclick="return confirm('You want to change the status to inactive?');">
                                                    <img src="~/Backoffice/images/active.png" width="25" alt="Active" />
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="get" action="/Backoffice/investor/investorstatus/@c["productid"]" style="display: inline;">
                                                <button type="submit" class="btnstatus" style="border:none;background:none" onclick="return confirm('You want to change the status to active?');">
                                                    <img src="~/Backoffice/images/wrong.png" width="25" alt="Inactive" />
                                                </button>
                                            </form>
                                        }
                                    </td>
                                    
                                        <td>
                                        @if (Convert.ToBoolean(c["showongroup"]) == true)
                                        {
                                            <form method="get" action="/Backoffice/investor/investorshowonhome/@c["productid"]" style="display: inline;">
                                                <button type="submit" class="btnstatus" style="border:none;background:none" onclick="return confirm('You want to change the status to inactive?');">
                                                    <img src="~/Backoffice/images/active.png" width="25" alt="Active" />
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="get" action="/Backoffice/investor/investorshowonhome/@c["productid"]" style="display: inline;">
                                                <button type="submit" class="btnstatus" style="border:none;background:none" onclick="return confirm('You want to change the status to active?');">
                                                    <img src="~/Backoffice/images/wrong.png" width="25" alt="Inactive" />
                                                </button>
                                            </form>
                                        }
                                    </td>
                                    <td>
                                   @(c["expiraydate"] == DBNull.Value ? "" : Convert.ToDateTime(c["expiraydate"]).ToShortDateString())
                                    </td>
                                    <td>
                                        <a href="/Backoffice/investor/investoredit/@c["productid"]" class="btnEdit">
                                            <img src="~/Backoffice/images/edit.png" class="img-fluid" width="20" alt="Edit" />
                                        </a>

                                        <a href="#" class="btndelete" data-href="/Backoffice/investor/investordelete/@c["productid"]">
                                            <img src="~/Backoffice/images/delete.png" class="img-fluid" width="20" alt="Delete" />
                                        </a>
                                    </td>
                                </tr>
                            }
    
                        </tbody>
                    </table>
                   <div class="pagination-container text-center mt-3" style="text-align:right;">
                                <button id="prevPage" class="btn btn-secondary" style="background-color:#456976;">Previous</button>
                                <span id="pageInfo" class="mx-2"></span>
                                <button id="nextPage" class="btn btn-secondary" style="background-color:#456976;">Next</button>
                            </div>

                }
                else
                {
                    <div class="col-lg-12 my-lg-2 text-lg-center message-top2">
                        Records not found
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@{
    var nonce = Context.Items["CSPNonce"]?.ToString();
}
<script nonce="@nonce">

    document.addEventListener('DOMContentLoaded', function () {

        // DELETE CONFIRM
        const deleteButtons = document.querySelectorAll('.btndelete');
        deleteButtons.forEach(function (btn) {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const confirmed = confirm("Are you sure you want to delete this record?");
                if (confirmed) {
                    window.location.href = btn.getAttribute('data-href');
                }
            });
        });

        paginateTable();   // run pagination once

    });


    /* ------------------------------------
       PAGINATION
    ------------------------------------ */

    let currentPage = 1;
    const rowsPerPage = 10;

    function getVisibleRows() {
        const table = document.getElementById('categoryTable');
        return Array.from(table.querySelectorAll('tbody tr'))
                    .filter(r => r.style.display !== 'none'); // ONLY visible rows
    }

    function paginateTable() {
        const rows = getVisibleRows();  // only filtered rows
        const totalRows = rows.length;
        const totalPages = Math.ceil(totalRows / rowsPerPage);

        rows.forEach(row => row.style.display = 'none');

        const start = (currentPage - 1) * rowsPerPage;
        const end = start + rowsPerPage;

        rows.forEach((row, index) => {
            if (index >= start && index < end) {
                row.style.display = '';
            }
        });

        document.getElementById('pageInfo').textContent = `Page ${currentPage} of ${totalPages}`;
        document.getElementById('prevPage').disabled = currentPage === 1;
        document.getElementById('nextPage').disabled = currentPage === totalPages;
    }


    document.getElementById('prevPage').addEventListener('click', () => {
        if (currentPage > 1) {
            currentPage--;
            paginateTable();
        }
    });

    document.getElementById('nextPage').addEventListener('click', () => {
        const rows = getVisibleRows();
        const totalPages = Math.ceil(rows.length / rowsPerPage);
        if (currentPage < totalPages) {
            currentPage++;
            paginateTable();
        }
    });


    /* ------------------------------------
       SEARCH
    ------------------------------------ */
    function searchTable() {
        const input = document.getElementById('searchInput').value.toLowerCase();
        const rows = document.querySelectorAll('#categoryTable tbody tr');

        rows.forEach(row => {
            row.style.display = row.textContent.toLowerCase().includes(input) ? "" : "none";
        });

        currentPage = 1;
        paginateTable();
    }


    /* ------------------------------------
       DATE FILTER
    ------------------------------------ */
    function filterByDate() {
        const fromDateInput = document.getElementById('fromDate').value;
        const toDateInput = document.getElementById('toDate').value;

        const fromDate = fromDateInput ? new Date(fromDateInput) : null;
        const toDate = toDateInput ? new Date(toDateInput) : null;

        if (toDate) {
            toDate.setDate(toDate.getDate() + 1);
        }

        const rows = document.querySelectorAll('#categoryTable tbody tr');

        rows.forEach(row => {
            const dateCell = row.getElementsByTagName('td')[2];
            if (!dateCell) return;

            const rowDate = new Date(dateCell.textContent.trim());
            let show = true;

            if (fromDate && rowDate < fromDate) show = false;
            if (toDate && rowDate >= toDate) show = false;

            row.style.display = show ? "" : "none";
        });

        currentPage = 1;
        paginateTable();
    }


    // SUCCESS MESSAGE HIDE
    setTimeout(() => {
        const msg = document.getElementById("message");
        if (msg) msg.style.display = "none";
    }, 2000);

</script>


