@using System.Data
@model skipper_group_new.Models.clsfaq

@{
    ViewBag.Title = "Add FAQ";
    Layout = "~/Views/Shared/_homepage.cshtml";
    var Faq = ViewBag.Faq as System.Data.DataTable;
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> FAQ</a></li>
                <li class="breadcrumb-item active">Add FAQ</li>
            </ul>
        </div>
    </div>
</div>



@using (Html.BeginForm("addfaq", "FAQ", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">Fields with * are mandatory</h2>

                    <!-- Question -->
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Question *</label>
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.HiddenFor(model => model.status)
                                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>

                    <!-- Answer -->
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Answer *</label>
                                    @Html.TextAreaFor(model => model.description, new { @class = "form-control editor1", @id = "editor1", @rows = "10" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>

                    <!-- Display Order -->
                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Display Order</label>
                                    @Html.EditorFor(model => model.displayorder, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.displayorder, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="row clearfix">
                        <div class="col-sm-12 my-lg-4 my-4">
                            <button type="submit" class="btn btn-raised btn-success waves-effect" value="Save">
                                @ViewBag.CreateUpdate
                            </button>
                        </div>
                    </div>

                    <!-- FAQ List -->
                    <div class="row clearfix">
                        @if (Faq != null && Faq.Rows.Count > 0)
                        {
                            <div class="col-sm-12">
                                <table class="table table-bordered">
                                    <thead class="table-header">
                                        <tr>
                                            <th>Question</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Faq.Rows)
                                        {
                                            <tr>
                                                <td>@(Convert.ToString(row["question"]))</td> <!-- ✅ match DB column -->
                                                <td>
                                                    @if (Convert.ToBoolean(row["Status"]) == true)
                                                    {
                                                        <a data-value="@(Convert.ToString(row["cid"]))"
                                                           href="/backoffice/faq/faqstatus/@row["cid"]" class="btnedit" onclick="return confirm('You want to change the status to active?');">
                                                            <img src="~/backoffice/images/active.png" width="25" />
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a data-value="@(Convert.ToString(row["cid"]))"
                                                           href="/backoffice/faq/faqstatus/@row["cid"]" class="btnedit" onclick="return confirm('You want to change the status to In-active?');">
                                                            <img src="~/backoffice/images/wrong.png" width="25" />
                                                        </a>
                                                    }
                                                </td>
                                                <td>@(Convert.ToString(row["trdate"]))</td>
                                                <td>
                                                    <a href="/backoffice/faq/faqedit/@row["cid"]" class="btnEdit">
                                                        <img src="~/Backoffice/images/edit.png" class="img-fluid" width="20" alt="Edit" />
                                                    </a>
                                                    <a href="#" class="btndelete" data-href="/backoffice/faq/faqdelete/@row["cid"]">
                                                        <img src="~/backoffice/images/delete.png" class="img-fluid" width="20" alt="Delete" />
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-12 my-lg-2 text-lg-center message-top2">
                                Records not found
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- CKEditor -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        $('.editor1').each(function () {
            CKEDITOR.replace($(this).prop('id'));
        });
    });
</script>
