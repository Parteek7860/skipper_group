@model skipper_group_new.Models.clsProduct

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_homepage.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Product</a></li>
                <li class="breadcrumb-item active">Add Product</li>
            </ul>
        </div>
    </div>
</div>

@if (ViewBag.SuccessCreate != null)
{
    <div class="col-lg-12 my-lg-2 text-lg-center message-top">
        @ViewBag.SuccessCreate
    </div>
}


@using (Html.BeginForm("AddProduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="card p-4 shadow-sm">
                <div class="body">
                    <h4 class="mb-4 text-primary"><strong>Fields with * are mandatory</strong></h4>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Category</label>
                                <div class="form-line">                                    
                                    @Html.DropDownListFor(model => model.PcatId, ViewBag.CategoryList as SelectList, "Select Category", new { @class = "form-control", @id = "PcatId" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PcatId, "", new { @class = "text-danger v-span" })
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Sub-Category</label>
                                <div class="form-line">
                                    @Html.DropDownListFor(model => model.PsubcatId, ViewBag.SubcategoryList as SelectList, "Select Sub-Category", new { @class = "form-control", @id = "PsubcatId" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PsubcatId, "", new { @class = "text-danger v-span" })
                        </div>

                    </div>
                    <div class="row clearfix">
                        @Html.HiddenFor(model => model.ProductId)
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Product Name *</label>
                            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger v-span" })
                            </div></div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Model No</label>
                            @Html.EditorFor(model => model.ModelNo, new { htmlAttributes = new { @class = "form-control" } })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Product Title</label>
                            @Html.EditorFor(model => model.ProductTitle, new { htmlAttributes = new { @class = "form-control" } })
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Rewrite URL</label>
                            @Html.EditorFor(model => model.RewriteUrl, new { htmlAttributes = new { @class = "form-control" } })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Display Order</label>
                            @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Status</label>
                            @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Short Detail</label>
                            @Html.TextAreaFor(model => model.ShortDetail, new { @class = "form-control editor1", @id = "editor1", @rows = "10" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Long Description</label>
                            @Html.TextAreaFor(model => model.LongDesc, new { @class = "form-control editor1", @id = "editor2", @rows = "10" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Upload Image</label>
                            <input type="file" name="UploadAImageFile" class="form-control" />
                            @Html.HiddenFor(model => model.UploadAImage)
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Banner Image</label>
                            <input type="file" name="BannerImgFile" class="form-control" />
                            @Html.HiddenFor(model => model.BannerImg)
                            </div></div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Is Family Product</label><br />
                            @Html.CheckBoxFor(model => model.IsFamilyProduct)
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Show On Home</label><br />
                            @Html.CheckBoxFor(model => model.ShowOnHome)
                            </div></div>
                        </div>
                       
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Page Meta</label>
                                    @Html.TextBoxFor(model => model.PageMeta, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Show On Group</label><br />
                                    @Html.CheckBoxFor(model => model.ShowOnGroup)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Specification</label>
                            @Html.TextAreaFor(model => model.Specification, new { @class = "form-control", rows = 4 })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Product Detail</label>
                            @Html.TextAreaFor(model => model.ProductDetail, new { @class = "form-control", rows = 4 })
                            </div></div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Page Script</label>
                            @Html.TextAreaFor(model => model.PageScript, new { @class = "form-control", rows = 4 })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Product URL</label>
                            @Html.TextBoxFor(model => model.Purl, new { @class = "form-control" })
                            </div></div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Prospectus</label>
                            @Html.TextBoxFor(model => model.Prospectus, new { @class = "form-control" })
                            @Html.HiddenFor(model => model.Prospectus)
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Large Image</label>
                            <input type="file" name="UploadLargeImageFile" class="form-control" />
                            @Html.HiddenFor(model => model.LargeImage)
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>No Index Follow</label><br />
                            @Html.CheckBoxFor(model => model.NoIndexFollow)
                            </div></div>
                        </div>

                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Username</label>
                            @Html.TextBoxFor(model => model.Uname, new { @class = "form-control" })
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Year Category ID</label>
                            @Html.TextBoxFor(model => model.YcatId, new { @class = "form-control", type = "number" })
                            </div></div>
                        </div>
                    </div>
                    <h5>SEO Section</h5>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Page Title</label>
                                    @Html.EditorFor(model => model.PageTitle, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>                        
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Meta Description</label>
                                    @Html.TextBoxFor(model => model.PageMetaDesc, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Canonical</label>
                                    @Html.TextBoxFor(model => model.Canonical, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Investor Date</label>
                                    @Html.TextBoxFor(model => model.InvestorDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Buttons -->
                    <div class="row mt-4">
                        <div class="col-sm-12 text-center">
                            <input type="submit" class="btn btn-success btn-lg mx-2" value="Save" />
                            <a href="/Products/Index" class="btn btn-secondary btn-lg mx-2">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@{
    var nonce = Context.Items["CSPNonce"]?.ToString();
}
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
<script nonce="@nonce" src="~/ckeditor/ckeditor.js"></script>
<script nonce="@nonce">
    $('.editor1').each(function () {
        CKEDITOR.replace($(this).prop('id'));
    });
</script>
<script nonce="@nonce">
    $(document).ready(function () 
    {
        $('#PcatId').change(function () {
            var categoryId = $(this).val();
            var subCategoryDropdown = $('#PsubcatId');

            subCategoryDropdown.empty().append($('<option>').val('').text('Select Sub-Category'));
                 
            if (categoryId) {
                $.ajax({
                    url: '/Products/GetSubcategoriesByCategoryId',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function (data) {
                        console.log(data); 
                        $.each(data, function (i, item) {
                            subCategoryDropdown.append($('<option>', {
                                value: item.value, 
                                text: item.text  
                            }));
                        });
                    },
                    error: function () {
                        alert('Error loading subcategories.');
                    }
                });
            }
        });
    });
</script>

