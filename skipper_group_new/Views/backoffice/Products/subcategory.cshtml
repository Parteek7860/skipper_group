@model skipper_group_new.Models.SubCategory

@{
    ViewData["Title"] = "Add Sub-Category";
    Layout = "~/Views/Shared/_homepage.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i>Sub-Category</a></li>
                <li class="breadcrumb-item active">Add Sub-Category</li>
            </ul>
        </div>
    </div>
</div>

@if (ViewBag.SuccessCreate != null)
{
    <div class="col-lg-12 my-lg-2 text-lg-center message-top">
        @ViewBag.SuccessCreate
    </div>
}


@using (Html.BeginForm("AddSubCategory", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    <div class="row clearfix">
                        @Html.HiddenFor(model => model.PSubCatId)
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Category *</label>
                                    @Html.DropDownListFor(model => model.PCatId, ViewBag.Category as SelectList, "Select Category", new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PCatId, "", new { @class = "text-danger v-span" })
                        </div>
                       
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                <label>Sub Category</label>
                                @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger v-span" })
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Short Detail</label>
                            @Html.TextAreaFor(model => model.ShortDetail, new { @class = "form-control editor1", @id = "editor1", @rows = "10" })
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Long Description</label>
                            @Html.TextAreaFor(model => model.Detail, new { @class = "form-control editor1", @id = "editor2", @rows = "10" })
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Meta Description</label>
                            @Html.TextAreaFor(model => model.PageMetaDesc, new { @class = "form-control editor1", @id = "editor3", @rows = "10" })
                            </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Upload Image</label>
                            <input type="file" name="UploadAIFile" class="form-control" />
                            @Html.HiddenFor(model => model.UploadAImage)
                            </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Banner Image</label>
                            <input type="file" name="BannerImgFile" class="form-control" />
                            @Html.HiddenFor(model => model.Banner)
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Home Desc</label>
                                    @Html.EditorFor(model => model.PageMetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                       
                    </div>
                    
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Rewrite URL</label>
                                    @Html.EditorFor(model => model.RewriteUrl, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Display Order</label>
                            @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            </div>
                        </div>

                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Show On Home</label><br />
                            @Html.CheckBoxFor(model => model.ShowOnHome)
                            </div></div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="form-line">
                            <label>No Index follow</label><br />
                            @Html.CheckBoxFor(model => model.NoIndexFollow)
                            </div></div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Status</label><br />
                            @Html.CheckBoxFor(model => model.Status)
                            </div></div>
                        </div>
                    </div>
                    <h5>SEO Section</h5>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Page Title</label>
                                    @Html.EditorFor(model => model.PageTitle, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Page Meta</label>
                                    @Html.TextBoxFor(model => model.PageMeta, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Canonical</label>
                                    @Html.EditorFor(model => model.Canonical, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Page Script</label>
                                    @Html.EditorFor(model => model.PageScript, new { htmlAttributes = new{ @class = "form-control"} })
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Buttons -->
                    <div class="row mt-4">
                        <div class="col-sm-12 text-center">
                            <input type="submit" class="btn btn-success btn-lg mx-2" value="Save" />
                            <a href="/backoffice/Products/viewsubcategory" class="btn btn-secondary btn-lg mx-2">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@{
    var nonce = Context.Items["CSPNonce"]?.ToString();
}
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
<script nonce="@nonce" src="~/ckeditor/ckeditor.js"></script>
<script nonce="@nonce">
    $('.editor1').each(function () {
        CKEDITOR.replace($(this).prop('id'));
    });
</script>

