                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Page Script</label>
                                    @Html.TextBoxFor(model => model.PageScript, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Display Order</label>
                                    @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control" })
                                </div>
                            </div>
