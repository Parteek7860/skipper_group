                                <div class="form-line">
                                    <label>Other </label>
                                    @Html.TextAreaFor(model => model.Review, new { @class = "form-control editor1", @id = "editor2", @rows = "10" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
