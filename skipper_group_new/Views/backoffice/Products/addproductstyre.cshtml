                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>No Index Follow</label><br />
                                    @Html.CheckBoxFor(model => model.NoIndexFollow)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <input type="submit" class="btn btn-success btn-lg mx-2" value="@ViewBag.Button" />
                            <a href="/Products/Index" class="btn btn-secondary btn-lg mx-2">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@{
    var nonce = Context.Items["CSPNonce"]?.ToString();
}
<script nonce = "@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script nonce = "@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script nonce = "@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
<script nonce = "@nonce" src="~/ckeditor/ckeditor.js"></script>

<script nonce="@nonce">
    $(document).ready(function () {
        $('.editor1').each(function () {
            CKEDITOR.replace($(this).prop('id'));
        });

        $('#ProductTypeId').change(function () {
            var productTypeId = $(this).val();
            var vehicleDropdown = $('#VehicleTypeId');
            vehicleDropdown.empty().append($('<option>').val('').text('Select Vehicle Type'));

            if (productTypeId) {
                $.ajax({
                    url: '/Products/VehicleTypeDropdown',
                    type: 'GET',
                    data: { productTypeId: productTypeId },
                    success: function (data) {
                        $.each(data, function (i, item) {
                            vehicleDropdown.append($('<option>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    },
                    error: function () {
                        alert('Error loading vehicle types.');
                    }
                });
            }
        });

        // Optional manual validation safeguard
        $('#productTyreForm').on('submit', function (e) {
            if (!$(this).valid()) {
                e.preventDefault();
                alert("⚠️ Please fill all required fields before submitting.");
            }
        });
    });
</script>
