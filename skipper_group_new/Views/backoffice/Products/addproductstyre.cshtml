    ViewBag.Title = "Product Detail";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Product</a></li>
                <li class="breadcrumb-item active">Add Product</li>
            </ul>
        </div>
    </div>
</div>



@using (Html.BeginForm("addeditproductstyre", "Products", FormMethod.Post, new { enctype = "multipart/form-data", id = "productTyreForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    @Html.HiddenFor(model => model.ProductTyreId)
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Product Type</label>
                                <div class="form-line">
                                    @Html.DropDownListFor(model => model.ProductTypeId, ViewBag.PTypeDropdown as SelectList, "Select Product Type", new { @class = "form-control", @id = "ProductTypeId" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.ProductTypeId, "", new { @class = "text-danger v-span" })
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Vehicle Type</label>
                                <div class="form-line">
                                    @Html.DropDownListFor(model => model.VehicleTypeId, ViewBag.VTypeDropdown as SelectList, "Select Vehicle Type", new { @class = "form-control", @id = "VehicleTypeId" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.VehicleTypeId, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Tyre Type</label>
                                <div class="form-line">
                                    @Html.DropDownListFor(model => model.TyreTypeId, ViewBag.TTypeDropdown as SelectList, "Select Tyre Type", new { @class = "form-control", @id = "TyreTypeId" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.TyreTypeId, "", new { @class = "text-danger v-span" })
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Position</label>
                                <div class="form-line">
                                    @Html.DropDownListFor(model => model.PostingId, ViewBag.PositionDropdown as SelectList, "Select Position", new { @class = "form-control", @id = "PostingId" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PostingId, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Product Title</label>
                                    @Html.TextBoxFor(model => model.ProductTyreTitle, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Tyre Size</label>
                                    @Html.TextBoxFor(model => model.SizeTitle, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.DropDownListFor(model => model.DesignType, ViewBag.DesignTypeDropdown as SelectList, "Select Design Type", new { @class = "form-control", @id = "DesignType" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.DesignType, "", new { @class = "text-danger v-span" })
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Tagline</label>
                                    @Html.TextBoxFor(model => model.Tagline, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
