@model skipper_group_new.Models.clsCategory;
@{
    ViewData["Title"] = "Add About Product";
    Layout = "~/Views/Shared/_homepage.cshtml";
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                @if (Model.shortname != null)
                {
                    <span> - @Model.shortname </span>
                }

                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Product & Solutions</a></li>
                <li class="breadcrumb-item active">About Product</li>
            </ul>
        </div>
    </div>
</div>

@using (Html.BeginForm("aboutproduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    <div class="row clearfix">
                        @Html.HiddenFor(model => model.productid)
                        @Html.HiddenFor(model => model.PcatId)
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Description</label>
                                    @Html.TextAreaFor(model => model.ShortDetail, new { @class = "form-control editor1", @id = "editor1", @rows = "10" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="row mt-4">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success btn-lg mx-2" value="Save" formmethod="post" formaction="@Url.Action("aboutproduct", "Products")"> @ViewBag.CreateUpdate </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@{
    var nonce = Context.Items["CSPNonce"]?.ToString();
}
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script nonce="@nonce" src="~/ckeditor/ckeditor.js"></script>
<script nonce="@nonce">
    $('.editor1').each(function () {
        CKEDITOR.replace($(this).prop('id'));
    });
</script>