@model skipper_group_new.Models.clsBlog

@{
    ViewData["Title"] = "Add Blog";
    Layout = "~/Views/Shared/_homepage.cshtml";
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Blog</a></li>
                <li class="breadcrumb-item active">Add Blog</li>
            </ul>
        </div>
    </div>
</div>

@if (ViewBag.SuccessCreate != null)
{
    <div class="col-lg-12 my-lg-2 text-lg-center message-top">
        @ViewBag.SuccessCreate
    </div>
}

@using (Html.BeginForm("AddBlog", "Blogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    @Html.HiddenFor(m => m.BlogId)                   
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Blog Title *</label>
                            @Html.TextBoxFor(m => m.BlogTitle, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BlogTitle, "", new { @class = "text-danger v-span" })
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Display Order</label>
                            @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control", type = "number" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Upload Blog Image</label>
                            <input type="file" name="BlogImageFile" class="form-control" />
                            @Html.HiddenFor(m => m.BlogImage)
                            </div></div>

                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Upload Large Image</label>
                            <input type="file" name="LargeImageFile" class="form-control" />
                            @Html.HiddenFor(m => m.LargeImage)
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Small Description</label>
                            @Html.TextAreaFor(m => m.SmallDesc, new { @class = "form-control editor1", rows = 5, id = "editor1" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Long Description</label>
                            @Html.TextAreaFor(m => m.LongDesc, new { @class = "form-control editor1", rows = 10, id = "editor2" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>URL Link</label>
                            @Html.TextBoxFor(m => m.UrlLink, new { @class = "form-control" })
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Rewrite URL</label>
                            @Html.TextBoxFor(m => m.RewriteUrl, new { @class = "form-control" })
                            </div></div>
                        </div>                        
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Status</label><br />
                            @Html.CheckBoxFor(m => m.Status)
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>No Index Follow</label><br />
                            @Html.CheckBoxFor(m => m.NoIndexFollow)
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">                        
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Page Script</label>
                            @Html.TextBoxFor(m => m.PageScript, new { @class = "form-control" })
                            </div></div>
                        </div>
                    </div>

                    <h5>SEO Section</h5>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Page Title</label>
                            @Html.TextBoxFor(m => m.PageTitle, new { @class = "form-control" })
                            </div></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Page Meta Description</label>
                            @Html.TextBoxFor(m => m.PageMetaDesc, new { @class = "form-control" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Page Meta</label>
                            @Html.TextBoxFor(m => m.PageMeta, new { @class = "form-control" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                            <label>Canonical</label>
                            @Html.TextBoxFor(m => m.Canonical, new { @class = "form-control" })
                            </div></div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <input type="submit" class="btn btn-success btn-lg mx-2" value="Save" />
                            <a href="/Blogs/view-blogs" class="btn btn-secondary btn-lg mx-2">Cancel</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
@{
    var nonce = Context.Items["CSPNonce"]?.ToString();
}
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script nonce="@nonce" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
<script nonce="@nonce" src="~/ckeditor/ckeditor.js"></script>
<script nonce="@nonce">
    $(document).ready(function () {
        $('.editor1').each(function () {
            CKEDITOR.replace($(this).prop('id'));
        });
    });
</script>
