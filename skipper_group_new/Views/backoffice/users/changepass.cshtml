@model skipper_group_new.Models.ChangePasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Change Password";
}

<html>
<head>
    <title>Change Password</title>
    <link rel="stylesheet" href="/backoffice/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/backoffice/css/main.css">
    <link rel="stylesheet" href="/backoffice/css/authentication.css">
</head>
<body class="theme-orange">

    <div class="authentication">
        <div class="card">
            <div class="body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="header slideDown" style="background-color:#488db8">
                            <div class="logo"><img src="~/images/site-logo-light.svg" alt="" width="200px" /></div>
                        </div>
                    </div>

                    <h5 class="title">Change Password</h5>

                    @using (Html.BeginForm("ChangeUserPassword", "Backoffice", FormMethod.Post))
                    {
                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", required = "required" })
                                <label class="form-label">Current Password</label>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required" })
                                <label class="form-label">New Password</label>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })
                                <label class="form-label">Confirm New Password</label>
                            </div>
                        </div>

                        <input type="submit" class="btn btn-primary btn-block" value="Change Password" />
                    }

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info mt-3">@ViewBag.Message</div>
                    }

                </div>
            </div>
        </div>
    </div>

    <script src="/backoffice/bundles/libscripts.bundle.js"></script>
    <script src="/backoffice/bundles/vendorscripts.bundle.js"></script>
</body>
</html>
