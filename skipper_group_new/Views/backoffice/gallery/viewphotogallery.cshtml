@model skipper_group_new.Models.clsGallery;
@using System.Data;
@{
    ViewBag.Title = "View Photo Gallery";
    Layout = "~/Views/Shared/_homepage.cshtml";
    var medialist = ViewBag.GalPhotoList as System.Data.DataTable;
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i>Photo Gallery</a></li>
                <li class="breadcrumb-item active">View Photo Gallery</li>
            </ul>
        </div>
    </div>
</div>

@using (Html.BeginForm("viewalbum", "gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <script src="~/assets/js/jquery.js"></script>
    <script src="~/assets/js/fancybox.js"></script>
    <link href="~/assets/js/jquery.fancybox.css" rel="stylesheet" />
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">            
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    <input type="text" id="searchInput" class="form-control" placeholder="Search..." onkeyup="searchTable()" />
                    <div class="row" style="margin-top:20px;">
                        <!-- From Date -->
                        <div class="col-lg-4">
                            <label for="fromDate" style="font-weight: bold;">From Date</label>
                            <input type="date" id="fromDate" class="form-control" style="border-radius: 5px; border: 1px solid #ddd;" />
                        </div>
                        <!-- To Date -->
                        <div class="col-lg-4">
                            <label for="toDate" style="font-weight: bold;">To Date</label>
                            <input type="date" id="toDate" class="form-control" style="border-radius: 5px; border: 1px solid #ddd;" />
                        </div>                        
                    </div>
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-lg-2" style="padding-top:10px;">
                            <button class="btn btn-primary" type="button" onclick="filterByDate()" style="width: 50%; padding: 10px; border-radius: 5px; font-weight: bold;background-color:#456976 !important">Search</button>
                        </div>
                    </div>

                    <div class="row clearfix">
                        @if (medialist.Rows.Count > 0)
                        {
                            <div class="col-sm-12">
                                <table class="table table-bordered table-responsive-lg" id="productTable">
                                    <thead class="table-header">
                                        <tr>     
                                            <th>Album</th>
                                            <th>Photo Title</th>
                                            <th>Image</th>                                            
                                            <th>Display Order</th>
                                            <th>Publish</th>                                            
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in medialist.Rows)
                                        {
                                            <tr>
                                                <td>@(Convert.ToString(row["Albumtitle"]))</td>
                                                <td>@(Convert.ToString(row["phototitle"]))</td>
                                                <td>
                                                    <img src="/Uploads/LargeImages/@(Convert.ToString(row["uploadphoto"]))" width="50" />
                                                </td>
                                                <td>@(Convert.ToString(row["displayorder"]))</td>
                                                @if ((Convert.ToBoolean(row["status"]) == true))
                                                {
                                                    <td>
                                                        <a data-value="@(Convert.ToString(row["photoid"]))"
                                                           href="/backoffice/gallery/chngStatus/@(Convert.ToString(row["photoid"]))" class="btnstatus" onclick="return confirm('You want to change status');">
                                                            <img src="~/backoffice/images/active.png" width="25" />
                                                        </a>

                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <a data-value="@(Convert.ToString(row["photoid"]))"
                                                           href="/backoffice/gallery/chngStatus/@(Convert.ToString(row["photoid"]))" class="btnstatus" onclick="return confirm('You want to change status');">
                                                            <img src="~/backoffice/images/wrong.png" width="25" />
                                                        </a>

                                                    </td>
                                                }
                                                <td>
                                                    <input type="hidden" value="@(Convert.ToString(row["photoid"]))" />

                                                    <a id="1" data-value="@(Convert.ToString(row["photoid"]))"
                                                       href="/backoffice/gallery/editPhotoGallary/@(Convert.ToString(row["photoid"]))" class="btnEdit">
                                                        <img src="~/backoffice/images/edit.png" class="img-fluid" width="20" alt="Edit" />
                                                    </a>
                                                    <a data-value="@(Convert.ToString(row["photoid"]))" href="/backoffice/gallery/deletePhotoGallary/@(Convert.ToString(row["photoid"]))" class="btndelete">
                                                        <img src="~/backoffice/images/delete.png" class="img-fluid" width="20" alt="Delete" />
                                                    </a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-12 my-lg-2 text-lg-center message-top2">
                                Records not found
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>


}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteButtons = document.querySelectorAll('.btndelete');
        deleteButtons.forEach(function (btn) {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const confirmed = confirm("Are you sure you want to delete this record?");
                if (confirmed) {
                    window.location.href = btn.getAttribute('href');
                }
            });
        });
    });


    function searchTable() {
        var input = document.getElementById('searchInput');
        var filter = input.value.toLowerCase();
        var table = document.getElementById('productTable');
        var tr = table.getElementsByTagName('tr');

        for (var i = 1; i < tr.length; i++) {
            var td = tr[i].getElementsByTagName('td');
            let matchFound = false;
            for (var j = 0; j < td.length; j++) {
                if (td[j]) {
                    var txtValue = td[j].textContent || td[j].innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        matchFound = true;
                        break;
                    }
                }
            }
            tr[i].style.display = matchFound ? "" : "none";
        }
    }

    function filterByDate() {
        const fromDateInput = document.getElementById('fromDate').value;
        const toDateInput = document.getElementById('toDate').value;

        const fromDate = fromDateInput ? new Date(fromDateInput) : null;
        const toDate = toDateInput ? new Date(toDateInput) : null;

        if (toDate) {
            toDate.setDate(toDate.getDate() + 1);
        }

        const table = document.getElementById('productTable');
        const tr = table.getElementsByTagName('tr');

        for (let i = 1; i < tr.length; i++) {
            const tdDate = tr[i].getElementsByTagName('td')[3];
            if (tdDate) {
                const trDate = new Date(tdDate.textContent || tdDate.innerText);
                let showRow = true;

                if (fromDate && trDate < fromDate) {
                    showRow = false;
                }

                if (toDate && trDate >= toDate) {
                    showRow = false;
                }

                tr[i].style.display = showRow ? "" : "none";
            }
        }
    }
</script>