@{
    Layout = "~/Views/Shared/_homepage.cshtml";
    ViewBag.Title = "Product Enquiry";
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i>Product Enquiry </a></li>
                <li class="breadcrumb-item active">Product Enquiry List</li>
            </ul>
        </div>
    </div>
</div>



@{
    if (ViewBag.Success != null)
    {
        <div class="col-lg-12 my-lg-2 text-lg-center message-top">
            @ViewBag.Success
        </div>
    }
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        @{
                            var e = ViewBag.Enquiry as List<skipper_group_new.Models.ProductEnquiryModel>;
                        }

                        @if (e != null && e.Any())
                        {
                            <div class="row mb-3" style="justify-content: space-between; align-items: center;">
                                <!-- From Date -->
                                <div class="col-md-3" style="padding-right: 10px;">
                                    <label for="fromDate" style="font-weight: bold;">From Date</label>
                                    <input type="date" id="fromDate" class="form-control" style="border-radius: 5px; border: 1px solid #ddd;" />
                                </div>
                                <!-- To Date -->
                                <div class="col-md-3" style="padding-right: 10px;">
                                    <label for="toDate" style="font-weight: bold;">To Date</label>
                                    <input type="date" id="toDate" class="form-control" style="border-radius: 5px; border: 1px solid #ddd;" />
                                </div>
                                <!-- Filter Button -->
                                <div class="col-md-2 align-self-end" style="text-align: center;">
                                    <button class="btn btn-primary" type="button" onclick="filterByDate()" style="width: 100%; padding: 10px; border-radius: 5px; font-weight: bold;">Filter</button>
                                </div>
                                <!-- Export Button -->
                                @* <div class="col-md-2 align-self-end" style="text-align: center;">
                                    <form method="post" asp-controller="Products" asp-action="ExportProductToExcel">
                                        <button type="submit" class="btn btn-success" style="width: 100%; padding: 10px; border-radius: 5px; font-weight: bold;">Export to Excel</button>
                                    </form>
                                </div> *@
                            </div>

                            <!-- Search Input -->
                            <input type="text" id="searchInput" class="form-control" placeholder="Search..." onkeyup="searchTable()" />

                            <!-- Product Table -->
                            <table class="table table-bordered" id="productTable">
                                <thead class="table-header">
                                    <tr>
                                        <th>Name</th>
                                        <th>Organization Name</th>
                                        <th>Product Name</th>
                                        <th>Email Id</th>                                       
                                        <th>Message</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in e)
                                    {
                                        <tr>
                                            <td>@i.FName</td>
                                            <td>@i.OrganizationName</td>
                                            <td>@i.ProductName</td>
                                            <td>@i.EmailId</td>                                           
                                            <td>@i.FMessage</td>
                                            <td>@i.TrDate.ToString()</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No enquiry found.</td>
                            </tr>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteButtons = document.querySelectorAll('.btndelete');
        deleteButtons.forEach(function (btn) {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const confirmed = confirm("Are you sure you want to delete this record?");
                if (confirmed) {
                    window.location.href = btn.getAttribute('data-href');
                }
            });
        });
    });


    function searchTable() {
        var input = document.getElementById('searchInput');
        var filter = input.value.toLowerCase();
        var table = document.getElementById('productTable');
        var tr = table.getElementsByTagName('tr');

        for (var i = 1; i < tr.length; i++) {
            var td = tr[i].getElementsByTagName('td');
            let matchFound = false;
            for (var j = 0; j < td.length; j++) {
                if (td[j]) {
                    var txtValue = td[j].textContent || td[j].innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        matchFound = true;
                        break;
                    }
                }
            }
            tr[i].style.display = matchFound ? "" : "none";
        }
    }

    function filterByDate() {
        const fromDateInput = document.getElementById('fromDate').value;
        const toDateInput = document.getElementById('toDate').value;

        const fromDate = fromDateInput ? new Date(fromDateInput) : null;
        const toDate = toDateInput ? new Date(toDateInput) : null;

        if (toDate) {
            toDate.setDate(toDate.getDate() + 1);
        }

        const table = document.getElementById('productTable');
        const tr = table.getElementsByTagName('tr');

        for (let i = 1; i < tr.length; i++) {
            const tdDate = tr[i].getElementsByTagName('td')[3];
            if (tdDate) {
                const trDate = new Date(tdDate.textContent || tdDate.innerText);
                let showRow = true;

                if (fromDate && trDate < fromDate) {
                    showRow = false;
                }

                if (toDate && trDate >= toDate) {
                    showRow = false;
                }

                tr[i].style.display = showRow ? "" : "none";
            }
        }
    }
</script>