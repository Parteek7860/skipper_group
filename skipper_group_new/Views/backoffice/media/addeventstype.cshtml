@using System.Data
@model skipper_group_new.Models.clsMediatype
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Media Type";
 
    Layout = "~/Views/Shared/_homepage.cshtml";
    var medialist = ViewBag.EventTypes as System.Data.DataTable;
     
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Media Section</a></li>
                <li class="breadcrumb-item active">Media Type</li>
            </ul>
        </div>
    </div>
</div>


@using (Html.BeginForm("eventstype", "MediaType", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Media Type</label>
                                    @Html.HiddenFor(model => model.id)
                                    @Html.EditorFor(model => model.mediatype, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.mediatype, "", new { @class = "text-danger v-span" })
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Display order</label>
                                    @Html.EditorFor(model => model.displayorder, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.displayorder, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12 my-lg-4 my-4">
                            <button type="submit" class="btn btn-raised btn-success waves-effect" value="Save" formaction="eventstype" formmethod="post"> @ViewBag.CreateUpdate </button>
                        </div>
                    </div>
                    <div class="row clearfix">
                        @if (medialist.Rows.Count > 0)
                        {
                            <div class="col-sm-12">
                                <table class="table table-bordered">
                                    <thead class="table-header">
                                        <tr>
                                            <th>Name</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in medialist.Rows)
                                        {
                                            <tr>
                                                <td>@(Convert.ToString(row["ntype"]))</td>
                                                @if ((Convert.ToBoolean(row["status"]) == true))
                                                {
                                                    <td>
                                                        @Html.HiddenFor(model => model.id)
                                                        <a data-value="@(Convert.ToString(row["ntypeid"]))"
                                                           href="/webmedia/eventstype/status?statusid=@(Convert.ToString(row["ntypeid"]))&status=@(Convert.ToString(row["status"]))" class="btndelete">
                                                            <img src="~/backoffice/images/active.png" width="20" />
                                                        </a>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        @Html.HiddenFor(model => model.id)
                                                        <a data-value="@(Convert.ToString(row["ntypeid"]))"
                                                           href="/webmedia/eventstype/status?statusid=@(Convert.ToString(row["ntypeid"]))&status=@(Convert.ToString(row["status"]))" class="btndelete">
                                                            <img src="~/backoffice/images/wrong.png" width="20" />
                                                        </a>
                                                    </td>
                                                }

                                                <th scope="row">@(Convert.ToString(row["trdate"]))</th>
                                                <td>
                                                    <input type="hidden" value="@(Convert.ToString(row["ntypeid"]))" />

                                                    <a data-value="@(Convert.ToString(row["ntypeid"]))"
                                                       href="/webmedia/eventstype/?edit=@(Convert.ToString(row["ntypeid"]))" class="btnEdit">
                                                        <img src="~/backoffice/images/edit.png" class="img-fluid" width="20" alt="Edit" />
                                                    </a>
                                                    <a data-value="@(Convert.ToString(row["ntypeid"]))"
                                                       href="/webmedia/eventstype/?del=@(Convert.ToString(row["ntypeid"]))" class="btndelete">
                                                        <img src="~/backoffice/images/delete.png" class="img-fluid" width="20" alt="Delete" />
                                                    </a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-12 my-lg-2 text-lg-center message-top2">
                                Records not found
                            </div>
                        }
 
                    </div>
                </div>
            </div>
        </div>
    </div>

}



