@model skipper_group_new.Models.clsbanner
@{
    ViewData["Title"] = "Add Home Banner";
    Layout = "~/Views/Shared/_homepage.cshtml";
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Home Banner</a></li>
                <li class="breadcrumb-item active">Add Home Banner</li>
            </ul>
        </div>
    </div>
</div>

@using (Html.BeginForm("addbanner", "HomeBanner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>                   
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Device Type</label>
                                    @Html.HiddenFor(model => model.id)
                                    @Html.HiddenFor(model => model.status)
                                    @Html.DropDownListFor(model => model.devicetype1, Model.devicetype, "Select Type", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.devicetype, "", new { @class = "text-danger v-span" })

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Banner Type</label>
                                    @Html.DropDownListFor(model => model.bannertype, Model.bannertypeselect, "Select Banner", new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.bannertype, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Title</label>
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger v-span" })
                        </div>

                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label> Short Desc</label>
                                @Html.TextAreaFor(model => model.shortdesc, new { @id = "editor1", @class = "form-control editor1", @rows = "10" })
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label> Upload Image</label>
                                <input type="file" name="file_Uploader" />
                                <img src="/uploads/banner/@Url.Content(Model.uploadbanner)" width="80" />
                                @Html.HiddenFor(model => model.uploadimage)
                                @Html.HiddenFor(model => model.uploadbanner)
                            </div>

                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="form-group">
                                <label> Banner Logo</label>
                                <input type="file" name="file_Uploader2" />
                                @Html.HiddenFor(model => model.bannerlogo)
                            </div>

                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Display order</label>
                                    @Html.EditorFor(model => model.displayorder, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.displayorder, "", new { @class = "text-danger v-span" })
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Title</label>
                                    @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <button type="submit" class="btn btn-raised btn-success waves-effect" value="Save" formaction="@Url.Action("addhomebanner", "HomeBanner")" formmethod="post"> @ViewBag.CreateUpdate </button>
                            <input type="submit" class="btn  btn-raised btn-close waves-effect" value="Cancel" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        $('.editor1').each(function () {
            CKEDITOR.replace($(this).prop('id'));
        });
    </script>
}