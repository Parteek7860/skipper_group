@using System.Data
@model skipper_group_new.Models.clsBannerType
@{
    Layout = "~/Views/Shared/_homepage.cshtml";
    ViewBag.Title = "Add Home Banner Type";
}
@{
    var BannerTypes = ViewBag.BannerTypes as System.Data.DataTable;
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                @ViewBag.Title
                <small class="text-muted">@Context.Session.GetString("ClientName")</small>
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Home Banner</a></li>
                <li class="breadcrumb-item active">Banner Type</li>
            </ul>
        </div>
    </div>
</div>
@if (ViewBag._Type != null)
{
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="/backoffice/products/viewproductsolution" class="btn btn-success"><i class="zmdi zmdi-home"></i> Back to Product & Solution</a></li>

            </ul>
        </div>
    </div>
}

@using (Html.BeginForm("addhomebannertype", "HomeBanner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">
                        Fields with * are mandatory
                    </h2>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Banner Type</label>
                                    @Html.HiddenFor(model => model.btypeid)
                                    @Html.HiddenFor(model => model.status)
                                    @Html.HiddenFor(model => model.collageid)
                                    @Html.DropDownListFor(model => model.btype, Model.bannertypeselect, "Select Banner", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.btype, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label> Display order</label>
                                    @Html.EditorFor(model => model.displayorder, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.displayorder, "", new { @class = "text-danger v-span" })
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12 my-lg-4 my-4">
                            <button type="submit" class="btn btn-raised btn-success waves-effect" value="Save" formaction="@Url.Action("Save", "HomeBanner")" formmethod="post" style="width:100px;">  @ViewBag.SuccessCreate</button>
                        </div>
                    </div>
                    <div class="row clearfix">


                        @if (BannerTypes != null && BannerTypes.Rows.Count > 0)
                        {
                            <div class="col-sm-12">
                                <table class="table table-bordered">
                                    <thead class="table-header">
                                        <tr>
                                            <th>Name</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow row in BannerTypes.Rows)
                                        {
                                            <tr>
                                                <td>@Convert.ToString(row["btype"])</td>

                                                <td>
                                                    <a data-value="@Convert.ToString(row["btypeid"])"
                                                       href="/Backoffice/Homebanner/UpdateStatus/@Convert.ToString(row["btypeid"])"
                                                       class="btnUpdateStatus">
                                                        @if (Convert.ToBoolean(row["status"]))
                                                        {
                                                            <img src="~/Backoffice/images/active.png" width="20" alt="Active" />
                                                        }
                                                        else
                                                        {
                                                            <img src="~/Backoffice/images/wrong.png" width="20" alt="Inactive" />
                                                        }
                                                    </a>
                                                </td>

                                                <td>@Convert.ToString(row["trdate"])</td>

                                                <td>
                                                    <a data-value="@Convert.ToString(row["btypeid"])"
                                                       href="/Backoffice/homebanner/addhomebannertype/@Convert.ToString(row["btypeid"])"
                                                       class="btnEdit">
                                                        <img src="~/Backoffice/images/edit.png" class="img-fluid" width="20" alt="Edit" />
                                                    </a>
                                                    <a data-value="@Convert.ToString(row["btypeid"])"
                                                       data-href="/Backoffice/homebanner/Delete/@Convert.ToString(row["btypeid"])"
                                                       class="btndelete">
                                                        <img src="~/Backoffice/images/delete.png" class="img-fluid" width="20" alt="Delete" />
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-12 my-lg-2 text-lg-center message-top2">
                                Records not found
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>




}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteButtons = document.querySelectorAll('.btndelete');
        deleteButtons.forEach(function (btn) {
            btn.addEventListener('click', function () {
                const confirmed = confirm("Are you sure you want to delete this record?");
                if (confirmed) {
                    window.location.href = btn.getAttribute('data-href');
                }
            });
        });
    });
</script>