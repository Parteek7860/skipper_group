
<!DOCTYPE html>
@model skipper_group_new.Models.clsHomeModel
@using System.Data;
@using skipper_group_new.mainclass;
@{
    DataTable dt = ViewBag.ProductList as DataTable;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @await Html.PartialAsync("~/Views/Shared/_seosection.cshtml")

    <link href="@Url.Content("/css/bootstrap.min.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/common.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/header.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/footer.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/engineering.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/inner-page.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/inner-page1.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/inner-responsive.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/swiper.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/aos.css")" rel="stylesheet" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&amp;display=swap"
          rel="stylesheet" />
    <script src="@Url.Content("/js/jquery.min.js")" asp-append-version="true"></script>
    <link href="@Url.Content("/css/dynamic.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("/css/vendor.css")" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" />
</head>

<body>
    <header class="position-fixed d-flex align-items-center justify-content-between w-full">
        <div class="logo">
            <a href="/">
                <img width="250" height="78" src="~/images/logo/logo.png" class="img-fluid before-sticky"
                     alt="SKIPPER LIMITED">
                <img width="250" height="78" src="~/images/logo/logo-sticky.png" class="img-fluid after-sticky"
                     alt="SKIPPER LIMITED">
            </a>
        </div>
        <nav>
            @await Html.PartialAsync("~/Views/PartialView/_MainMenu.cshtml")
        </nav>


    </header>
    @if (Model.collageid != "0")
    {
        @if (Model != null)
        {

            @if (string.IsNullOrEmpty(Model.shortdesc))
            {
                <section class="inner_banner eng_css_banner">
                    <figure class="eng2">
                        <img src="/uploads/banner/@Model.uploadimage"
                             alt="@Model.Name" class="img-fluid w-100">
                    </figure>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="bread_btm">
                                    <h5>@Model.Name</h5>
                                </div>
                                <div class="shrt-title">
                                    <h6>@Html.Raw(Model.tagline)</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="eng_header">
                        @if (dt != null && dt.Rows.Count > 0)
                        {
                            <ul class="main_list">
                                @foreach (DataRow row in dt.Rows)
                                {
                                    string classactive = "";
                                    var routeId = Convert.ToInt32(ViewBag.CurrentProductId);

                                    if (Convert.ToInt32(row["productid"]) == routeId)
                                    {
                                        classactive = "active";
                                    }

                                    <li class="@classactive">
                                        <a href="/@Convert.ToString(row["productname"]).ToSlug()/@Convert.ToInt32(row["productid"])">@Convert.ToString(row["productname"]) </a>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </section>
            }
            else
            {
                <section class="engineering">
                    <figure class="eng2">
                        <img src="/uploads/banner/@Model.uploadimage"
                             alt="@Model.Name" class="img-fluid w-100">
                    </figure>
                    @Html.Raw(Model.shortdesc.ToString())
                    <div class="vrtcl-line">
                        <figure><img src="/images/icon/engineer-vertical-line.svg" class="image2" alt="vertical-line" /></figure>
                    </div>
                    <div class="eng_header">
                        @if (dt != null && dt.Rows.Count > 0)
                        {
                            <ul class="main_list">
                                @foreach (DataRow row in dt.Rows)
                                {
                                    string classactive = "";
                                    var routeId = Convert.ToInt32(ViewBag.CurrentProductId);

                                    if (Convert.ToInt32(row["productid"]) == routeId)
                                    {
                                        classactive = "active";
                                    }

                                    <li class="@classactive">
                                        <a href="/@Convert.ToString(row["productname"]).ToSlug()/@Convert.ToInt32(row["productid"])">@Convert.ToString(row["productname"]) </a>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </section>
            }

        }

    }





    @RenderBody();
    @await Html.PartialAsync("~/Views/Shared/_footer.cshtml")


    <script src="https://code.jquery.com/jquery-migrate-3.4.1.min.js"></script>
    <script src="@Url.Content("/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("/js/owl.carousel.min.js")"></script>
    <script src="@Url.Content("/js/swiper.js")"></script>

    <script src="@Url.Content("/js/TweenMax.min.js")"></script>
    <script src="@Url.Content("/js/SmoothScroll.min.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script src="@Url.Content("/js/aos.js")"></script>
    <script src="@Url.Content("/js/common.js")"></script>
    <script src="@Url.Content("/js/inner.js")"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>


    <script src="@Url.Content("/js/timeline.js")"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
